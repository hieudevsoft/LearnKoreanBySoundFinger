<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_brush_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:text="Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekBarBrushSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bsb_always_show_bubble="false"
        app:bsb_hide_bubble="true"
        app:bsb_max="10.0"
        app:bsb_min="0"
        app:bsb_is_float_type="false"
        app:bsb_section_count="10"
        app:bsb_bubble_text_size="18sp"
        app:bsb_track_size="1dp"
        app:bsb_second_track_size="5dp"
        app:bsb_second_track_color="@color/bsb_second_track_color"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>